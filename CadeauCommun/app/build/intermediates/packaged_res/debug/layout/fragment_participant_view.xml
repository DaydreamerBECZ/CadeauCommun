<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/participantListViewFragment"
    tools:context=".FEL.Fragment.participantViewFragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/makeGiftTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/subtitle"
            android:text="@string/invitedTextBox"
            android:textAlignment="viewStart"
            android:textColor="#263238" />

        <ListView
            android:id="@+id/selectedParticipantsListView"
            android:layout_width="match_parent"
            android:layout_height="450dp" />
    </LinearLayout>

</FrameLayout>