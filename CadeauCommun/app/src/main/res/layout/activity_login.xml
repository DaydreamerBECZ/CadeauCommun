<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FEL.Activity.loginActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="274dp"
        android:layout_height="39dp"
        android:layout_marginTop="60dp"
        android:background="@color/title"
        android:backgroundTint="@color/title"
        android:fontFamily="sans-serif-light"
        android:text="@string/l_o_g_i_n"
        android:textAlignment="center"
        android:textColor="#FBF7F7"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/u_s_e_r_n_a_m_e"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/firstName_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/firstName_textView"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/firstName_textView"
        app:layout_constraintTop_toBottomOf="@+id/firstName_textView" />

    <EditText
        android:id="@+id/password_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/password_textView"
        app:layout_constraintStart_toStartOf="@+id/password_textView"
        app:layout_constraintTop_toBottomOf="@+id/password_textView"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/password_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/p_a_s_s_w_o_r_d"
        app:layout_constraintEnd_toEndOf="@+id/firstName_lbl"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/firstName_lbl"
        app:layout_constraintTop_toBottomOf="@+id/firstName_lbl" />

    <Button
        android:id="@+id/LoginButton"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="309dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/subtitle"
        android:onClick="loginSubmit"
        android:text="@string/loginButtonText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/password_lbl"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/password_lbl"
        app:layout_constraintTop_toBottomOf="@+id/password_lbl"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>